<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvCollege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BSIT - A"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#172747" />

    <TextView
        android:id="@+id/tvSectionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College of Computing | Year 2"
        android:textSize="14sp"
        android:textColor="#444444" />

    <TextView
        android:id="@+id/tvCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code: XYZ123"
        android:textSize="13sp"
        android:textColor="#888888"
        android:layout_marginBottom="6dp" />

    <Button
        android:id="@+id/btnRegenerateCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regenerate Code"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#172747" />

</LinearLayout>
