<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoleActivity"
    android:orientation="vertical"
    android:background="@drawable/background_splash"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:src="@drawable/background_select_role"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your role to continue using EduNotify."
        android:textSize="20dp"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="20dp"
        android:textAlignment="center"
        android:textColor="#344047"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="9dp"/>
    
    
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:layout_marginTop="10dp"
     >


      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"

          >


          <ImageView
              android:id="@+id/imageStudent"
              android:layout_width="190dp"
              android:layout_height="190dp"
              android:src="@drawable/background_student"
              android:scaleType="fitXY"
              android:background="@drawable/selector_role"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Student"
              android:textSize="24sp"
              android:fontFamily="sans-serif-medium"/>

      </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >


            <ImageView
                android:id="@+id/imageParent"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:src="@drawable/background_parent"
                android:scaleType="fitXY"
                android:background="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >


            <ImageView
                android:id="@+id/imageTeacher"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:src="@drawable/background_teacher"
                android:scaleType="fitXY"
                android:background="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

    </GridLayout>
    
    
    <Button
        android:id="@+id/buttonRegister"
        android:layout_marginTop="30dp"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_started_button"
        android:text="Continue"
        android:textColor="@color/white"
        android:textAllCaps="false"/>



</LinearLayout>