<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Section"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#172747"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etCollege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="College"
        android:inputType="textCapWords"/>

    <EditText
        android:id="@+id/etYearLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Year Level"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Program"
        android:inputType="text"/>

    <!-- âœ… NEW: Section name input -->
    <EditText
        android:id="@+id/etSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Section"
        android:inputType="textCapWords"/>

    <TextView
        android:id="@+id/tvGeneratedCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Section Code: "
        android:textStyle="bold"
        android:textColor="#172747"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSaveSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="#1E88E5"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>

</LinearLayout>
