<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F8F9FA"
    tools:context=".PendingPageActivity">

    <ImageView
        android:id="@+id/imagePendingIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/icon_bell"
        android:contentDescription="Pending Icon" />

    <TextView
        android:id="@+id/textPendingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approval Pending"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textPendingDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your account is awaiting admin approval.\nYou will be notified once it's verified."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingHorizontal="40dp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:backgroundTint="#9E9E9E"
        android:textColor="#FFFFFF" />

</LinearLayout>
